@using Fiap.UI.Escola.Web.Entities
@model Turma?

@{
    var titulo = string.IsNullOrEmpty(Model?.turma)
                ? string.Empty
                : string.Concat(Model.turma, " - ");

    ViewBag.Title = string.Concat(titulo, nameof(Turma).Pluralize());
}

<form action="/Turmas/Salvar" method="POST">
    <input type="hidden" name="id" value="@ViewBag.Id" />
    <div class="form-group">
        <label for="exampleFormControlInput1">Curso</label>
        <input type="text" class="form-control" name="curso_id" id="cursoId" value="@Model?.cursoId">
    </div>
    <div class="form-group">
        <label for="exampleFormControlInput1">Turma</label>
        <input type="text" class="form-control" name="turma" id="turma" value="@Model?.turma">
    </div>
    <div class="form-group">
        <label for="exampleFormControlInput1">Ano</label>
        <input type="text" class="form-control" name="ano" id="ano" value="@Model?.ano">
    </div>
    <button type="submit" class="btn btn-primary btn-lg btn-block">
        Salvar
    </button>
</form>
